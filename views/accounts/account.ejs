<%- include('../partials/head') %>
<%- include('../partials/header') %>
<%- include('../partials/navigation') %>

<main class="account-management">
  <h1><%= title %></h1>

  <!-- Flash messages -->
  <div class="flash-messages">
    <%- messages() %>
  </div>

  <!-- Greeting -->
  <h2>Welcome <%= accountData.account_firstname %></h2>


  <!-- Update account link (for ALL users) -->
  <p>
    <a href="/account/update/<%= accountData.account_id %>">Update Account Information</a>

  </p>

  <!-- Only show inventory management if Employee or Admin -->
  <% if (accountData.account_type === "Employee" || accountData.account_type === "Admin") { %>
    <h3>Inventory Management</h3>
    <p>
      <a href="/inv/">Go to Inventory Management</a>
    </p>
  <% } %>

</main>

<%- include('../partials/footer') %>
